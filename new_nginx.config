# 写入/etc/nginx/nginx.conf 中的http模块
# 自动生成 Connection 头：有 Upgrade 就 upgrade，否则 close
map $http_upgrade $connection_upgrade {
  default upgrade;
  ''      close;
}

upstream app_backend {
  # 你的应用后端（示例：本机 3000 端口或容器名）
  server 127.0.0.1:3000;
  keepalive 32;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name osaka-jp.howiecode.xyz;

    # 你用 --install-cert 部署的目标文件
    ssl_certificate     /etc/nginx/ssl/cert.pem;     # fullchain（站点证书+中间证书）
    ssl_certificate_key /etc/nginx/ssl/key.pem;      # 私钥
    ssl_trusted_certificate /etc/nginx/ssl/cert.pem; # 用于 OCSP stapling 验证

    # 基本 TLS 设置（稳妥缺省）
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers off;
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:10m;
    ssl_session_tickets off;

    # OCSP Stapling（建议开启，需可访问外网）
    ssl_stapling on;
    ssl_stapling_verify on;
    resolver 1.1.1.1 8.8.8.8 ipv6=off;

    # 强制 HSTS（确认所有子域都在 HTTPS 后再加 includeSubDomains/preload）
    add_header Strict-Transport-Security "max-age=31536000" always;

    location / {
        proxy_pass https://www.xiaolincoding.com; #伪装网址2
        proxy_redirect off;
        proxy_ssl_server_name on;
        sub_filter_once off;
        sub_filter "xiaolincoding.com" $server_name;
        proxy_set_header Host "xiaolincoding.com";
        proxy_set_header Referer $http_referer;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header User-Agent $http_user_agent;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
        proxy_set_header Accept-Encoding "";
        proxy_set_header Accept-Language "zh-CN";
    }
    
    # ---- 应用反代（HTTP/WS 二合一，自动透传 WebSocket）----
    location / {
        proxy_pass http://app_backend;

        # 让 Nginx 与上游用 HTTP/1.1，以支持 keepalive 和 WebSocket
        proxy_http_version 1.1;

        # WebSocket 必需头
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;

        # 透传 Host 和真实客户端信息
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # 合理延长 WS/长轮询超时，避免被默认 60s 断开
        proxy_read_timeout 3600s;
        proxy_send_timeout 3600s;
    }
}

server {
  listen 80;
  listen [::]:80;
  server_name osaka-jp.howiecode.xyz;

  location ^~ /.well-known/acme-challenge/ {
    root /var/www/html;
    default_type "text/plain";
  }

  location / {
    return 301 https://$host$request_uri;
  }
}
